<p id="notice"><%= notice %></p>

<h1>Wines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Strains</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.name %></td>
        <td>
            <% wine_strains = wine.wine_strains %>
            <% strains = wine_strains.map do |wine_strain| %>
              <% [name = Strain.find(wine_strain.strain_id).name, percent = wine_strain.percentage] %>
            <% end %>
            <% strains.sort.each do |strain| %>
              <% strain.each do |i| %>
                <% if i%2 != 0 %>
                  <%= i %>
                <% else %>
                  (<%= i.round %>%)
                <% end %>
              <% end %>
            <% end %>
        </td>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

